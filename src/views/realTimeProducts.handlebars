<div class="d-flex mx-5 justify-content-center my-5">
    <div class="col-6 d-flex  flex-column border me-4" style="width: 500px;">
        <h2 class="text-center mt-3">Agregar producto</h2>
        <div class="d-flex justify-content-center ">
            <div  class="d-flex justify-content-center " >
                <form onsubmit="addProduct(event)" class="my-5 mx-5 d-flex flex-column">
                    <input id="nombre_producto" class="mb-2" type="text" title="nombre" placeholder="Nombre del Nuevo producto">
                    <input id="descripcion_producto" class="mb-2" type="text" title="description" placeholder="description del Nuevo producto">
                    <input id="precio_producto" class="mb-2" type="text" title="price" placeholder="price del Nuevo producto">
                    <input id="thumbnail_producto" class="mb-2" type="text" title="thumbnail" placeholder="thumbnail del Nuevo producto">
                    <input id="codigo_producto" class="mb-2" type="text" title="code" placeholder="code del Nuevo producto">
                    <p class="h5">Status:<input id="status_producto" class="mb-2 ms-5"  type="text" title="status" placeholder="Escriba true o false"></p>
                    <input  id="stock_producto" class="mb-2" type="text" title="stock" placeholder="stock del Nuevo producto">
                    <input type="submit" value="Agregar nuevo producto"></button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-6 d-flex flex-column border ms-4" style="width: 500px;">
        <h2 class="text-center mt-3">Eliminar producto</h2>

        <form onsubmit="deleteProduct(event)" class="my-5 mx-5 d-flex flex-column">
                <input id="id_producto" class="mb-2" type="text" title="nombre" placeholder="Id del producto a eliminar">
    
                <input type="submit" value="Eliminar Producto"></button>
            </form>
    </div>
</div>


<div id="contenedor_productos" class="d-flex flex-wrap mx-5 my-5">
     {{#each products}}
    <div class="d-flex flex-column col-4 border mx-4 my-4">
        <p class="h5"><b>Id:</b> {{this._id}}</p>
        <p class="h3">{{this.title}}</p>
        <p class="description">{{this.description}}</p>
        <p class="stock text-align-left h4">Stock: {{this.stock}}</p>
        <p class="precio text-ends h3 ">$ {{this.price}}</p>
        {{#if this.status}}
            <p class="text-ends h3" style="color: green;">Disponible</p>
        {{else}}
            <p class="text-ends h3" style="color: red;">No disponible</p>
        {{/if}} 
    </div>
    {{/each}}
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="../public/js/realtimeproducts.js"></script>   